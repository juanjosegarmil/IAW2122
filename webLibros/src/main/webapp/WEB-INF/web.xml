<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <context-param>
  	<param-name>usuario</param-name>
  	<param-value>usuario</param-value>
  </context-param>
  
  <context-param>
  	<param-name>password</param-name>
  	<param-value>usuario</param-value>
  </context-param>
  
  <context-param>
  	<param-name>database</param-name>
  	<param-value>jdbc:mysql://localhost:3306/bdlibros</param-value>
  </context-param>
  
  <context-param>
  	<param-name>driver</param-name>
  	<param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <servlet>
  	<servlet-name>ValidarUsuario</servlet-name>
  	<display-name>ValidarUsuario</display-name>
  	<description></description>
  	<servlet-class>es.iestriana.controller.ValidarUsuario</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RegistrarUsuario</servlet-name>
  	<display-name>RegistrarUsuario</display-name>
  	<description></description>
  	<servlet-class>es.iestriana.controller.RegistrarUsuario</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>BorrarLibro</servlet-name>
  	<display-name>BorrarLibro</display-name>
  	<description></description>
  	<servlet-class>es.iestriana.controller.BorrarLibro</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CerrarSesion</servlet-name>
  	<display-name>CerrarSesion</display-name>
  	<description></description>
  	<servlet-class>es.iestriana.controller.CerrarSesion</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AnadirLibro</servlet-name>
  	<display-name>AnadirLibro</display-name>
  	<description></description>
  	<servlet-class>es.iestriana.controller.AnadirLibro</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EditarLibro</servlet-name>
  	<display-name>EditarLibro</display-name>
  	<description></description>
  	<servlet-class>es.iestriana.controller.EditarLibro</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ValidarUsuario</servlet-name>
  	<url-pattern>/ValidarUsuario</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RegistrarUsuario</servlet-name>
  	<url-pattern>/RegistrarUsuario</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>BorrarLibro</servlet-name>
  	<url-pattern>/BorrarLibro</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CerrarSesion</servlet-name>
  	<url-pattern>/CerrarSesion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AnadirLibro</servlet-name>
  	<url-pattern>/AnadirLibro</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>EditarLibro</servlet-name>
  	<url-pattern>/EditarLibro</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	<welcome-file>index.jsp</welcome-file>
  	<welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
